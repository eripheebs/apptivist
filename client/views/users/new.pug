doctype html
html(lang ="en" ng-app="apptivistApp")
  head
    meta(charset='utf-8')
    script(src='../bower_components/angular/angular.js')
    script(src='../js/app.js')
    script(src='../js/controllers/eventController.js')
    title apptivistApp
  body(ng-controller="eventController as ctrl")

body
  form(name="NewUser", method="post", action="/users")
    div.input
      span.label Name
      input(type="text", name="title", id="new-event-title"
    )
    div.input
      span.label Username
      input(type="text", name="description", id="new-event-description"
    )
    div.input
      span.label Email
      input(type="text", name="time", id="new-event-time"
    )
    div.input
      span.label Password
      input(type="text", name="location", id="new-event-location"
    )
    div.actions
      input(type="submit", value="submit", id="submit")
