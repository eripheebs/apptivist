doctype html
html(lang ="en" ng-app="apptivistApp")
  head
    meta(charset='utf-8')
    script(src='../bower_components/angular/angular.js')
    script(src='../js/app.js')
    script(src='../js/controllers/apptivistController.js')
    title apptivistApp
  body(ng-controller="apptivistController as ctrl")
    p scope is {{ctrl}}
    form(name="NewEvent", method="post", ng-submit="ctrl.createEvent()")
      div.input
        span.label Title
        input(type="text", name="title", id="new-event-title", ng-model="title"
      )
      div.input
        span.label Description
        input(type="text", name="description", id="new-event-description", ng-model="description"
      )
      div.input
        span.label Time
        input(type="text", name="time", id="new-event-time", ng-model="time"
      )
      div.input
        span.label Location
        input(type="text", name="location", id="new-event-location", ng-model="location"
      )
      div.actions
        input(type="submit", value="submit", id="submit")
